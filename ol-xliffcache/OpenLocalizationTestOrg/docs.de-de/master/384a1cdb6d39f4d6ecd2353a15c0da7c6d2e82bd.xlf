          <source><ph id="ph1">\&lt;</ph>serviceSecurityAudit&gt;</source>
        </trans-unit>
        <trans-unit id="102" translate="yes" xml:space="preserve">
          <source>Specifies settings that enable auditing of security events during service operations.</source>
        </trans-unit>
        <trans-unit id="103" translate="yes" xml:space="preserve">
          <source><ph id="ph1">\&lt;</ph>system.ServiceModel&gt;</source>
        </trans-unit>
