        <trans-unit id="103" translate="yes" xml:space="preserve">
          <source>The layout of WPF controls can change slightly.</source>
        </trans-unit>
        <trans-unit id="104" translate="yes" xml:space="preserve">
          <source>Impact</source>
        </trans-unit>
        <trans-unit id="105" translate="yes" xml:space="preserve">
          <source>As a result of this change:</source>
        </trans-unit>
        <trans-unit id="106" translate="yes" xml:space="preserve">
          <source>The width or height of elements may grow or shrink by at most one pixel.</source>
        </trans-unit>
        <trans-unit id="107" translate="yes" xml:space="preserve">
          <source>The placement of an object can move by at most one pixel.</source>
        </trans-unit>
        <trans-unit id="108" translate="yes" xml:space="preserve">
          <source>Centered elements can be vertically or horizontally off center by at most one pixel.</source>
        </trans-unit>
        <trans-unit id="109" translate="yes" xml:space="preserve">
